<div
  class="modal fade"
  id="signUpModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="SignUpModal"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h5 class="modal-title text-white" id="signUpTitle">Sign Up</h5>
        <button id="closeSignup" type="button" class="close"
                data-dismiss="modal"
                aria-label="Close">
          <span aria-hidden="true" style="color: white;">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <form id="signupForm">
              <div class="form-group">
                <label class="text-white" for="new-username">Username</label>
                <input
                  id="new-username"
                  type="text"
                  class="form-control"
                  aria-describedby="emailHelp"
                  placeholder="Enter username"
                  name="username"
                  required
                />
              </div>
              <div class="form-group">
                <label class="text-white" for="signup-password">Enter Password</label>
                <input
                  id="signup-password"
                  class="form-control"
                  type="password"
                  placeholder="Password"
                  name="password"
                  required
                />
                <small id="emailHelp" class="form-text text-light"
                  >Password must be at least 8 characters with 2 numbers.
                </small>
                <br />
                <label class="text-white" for="confirm-password">Confirm Password</label>
                <input
                  id="confirm-password"
                  type="password"
                  class="form-control"
                  placeholder="Confirm Password"
                  name="confirmPassword"
                  required
                />
              </div>
              <div class="form-group">
                <button id="cancel" type="button" class="btn btn-secondary" data-dismiss="modal">
                  Cancel
                </button>
                <button id="signupBtn" type="submit" class="btn btn-primary" disabled>
                  Sign Up
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
