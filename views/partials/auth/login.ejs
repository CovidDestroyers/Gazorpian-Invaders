<!-- Modal for SignUp -->
<div
  class="modal fade"
  id="loginInModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="LogInModal"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h5 class="modal-title text-white" id="loginTitle">Login</h5>
        <button
          id = "loginClose"
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true" style="color: white;">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <form id="loginForm">
              <div class="form-group">
                <label class="text-white" for="username">Username</label>
                <input
                  id="username"
                  type="text"
                  class="form-control"
                  aria-describedby="usernameHelp"
                  placeholder="Enter username"
                  name="username"
                />
              </div>
              <div class="form-group">
                <label class="text-white" for="password"
                  >Enter Password</label
                >
                <input
                  id="password"
                  class="form-control"
                  type="password"
                  placeholder="Password"
                  name="password"
                />
                <br />
              </div>
              <div class="form-group">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-dismiss="modal"
                >
                  Cancel
                </button>
                <button id="loginBtn" type="submit" class="btn btn-primary" disabled>
                  Login
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
